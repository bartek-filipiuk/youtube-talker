---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Logging out...">
  <div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 to-indigo-100">
    <div class="text-center">
      <div class="animate-spin rounded-full h-16 w-16 border-b-4 border-blue-600 mx-auto mb-4"></div>
      <p class="text-gray-700 text-lg">Logging out...</p>
    </div>
  </div>
</Layout>

<script>
  import { logout } from '../lib/api';
  import { clearAuth } from '../stores/auth';
  import { getToken } from '../lib/auth';

  // Immediately log out on page load
  (async () => {
    const token = getToken();

    if (token) {
      try {
        // Call logout API (invalidate session on backend)
        await logout(token);
      } catch (error) {
        // Ignore errors - we'll log out client-side anyway
        console.error('Logout API call failed:', error);
      }
    }

    // Clear auth state (client-side)
    clearAuth();

    // Redirect to login after a brief delay
    setTimeout(() => {
      window.location.href = '/';
    }, 1000);
  })();
</script>
