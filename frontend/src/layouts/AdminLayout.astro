---
/**
 * Admin Layout Component
 *
 * Provides consistent layout for all admin pages with:
 * - Admin navigation header
 * - User info display
 * - Logout functionality
 * - Responsive design
 */

import '../styles/global.css';
import type { AdminAuthResult } from '../lib/admin-auth';

interface Props {
  title: string;
  auth: AdminAuthResult;
}

const { title, auth } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content="Qivio Admin - Manage channels and videos" />
  <title>{title} | Admin | Qivio</title>

  <!-- Google Fonts - Roboto Mono -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="bg-gray-50 min-h-screen font-mono">
  <!-- Admin Header -->
  <header class="bg-white border-b border-gray-200 shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <!-- Left: Logo and Navigation -->
        <div class="flex items-center space-x-8">
          <a href="/admin" class="text-xl font-bold text-gray-900 hover:text-gray-600 transition">
            üõ†Ô∏è Admin Panel
          </a>
          <nav class="hidden md:flex space-x-4">
            <a
              href="/admin"
              class={`px-3 py-2 rounded-md text-sm font-medium transition ${
                currentPath === '/admin'
                  ? 'bg-gray-100 text-gray-900'
                  : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900'
              }`}
            >
              Dashboard
            </a>
            <a
              href="/admin/channels"
              class={`px-3 py-2 rounded-md text-sm font-medium transition ${
                currentPath.startsWith('/admin/channels')
                  ? 'bg-gray-100 text-gray-900'
                  : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900'
              }`}
            >
              Channels
            </a>
          </nav>
        </div>

        <!-- Right: User Info and Logout -->
        <div class="flex items-center space-x-4">
          <span class="text-sm text-gray-600">
            {auth.user.email}
          </span>
          <button
            id="logout-btn"
            class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 transition"
          >
            Logout
          </button>
        </div>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div class="md:hidden border-t border-gray-200">
      <nav class="px-4 py-2 space-y-1">
        <a
          href="/admin"
          class={`block px-3 py-2 rounded-md text-sm font-medium transition ${
            currentPath === '/admin'
              ? 'bg-gray-100 text-gray-900'
              : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900'
          }`}
        >
          Dashboard
        </a>
        <a
          href="/admin/channels"
          class={`block px-3 py-2 rounded-md text-sm font-medium transition ${
            currentPath.startsWith('/admin/channels')
              ? 'bg-gray-100 text-gray-900'
              : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900'
          }`}
        >
          Channels
        </a>
      </nav>
    </div>
  </header>

  <!-- Main Content -->
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <slot />
  </main>

  <!-- Logout Script -->
  <script>
    import { clearAuthCookie } from '../lib/admin-auth';

    const logoutBtn = document.getElementById('logout-btn');
    if (logoutBtn) {
      logoutBtn.addEventListener('click', () => {
        // Clear localStorage token (client-side)
        localStorage.removeItem('token');

        // Clear cookie (SSR)
        clearAuthCookie();

        // Redirect to home
        window.location.href = '/?message=logged_out';
      });
    }
  </script>
</body>
</html>
