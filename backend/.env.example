# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/youtube_talker

# Qdrant Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=  # Optional for local development

# OpenRouter API (for LLM and embeddings)
OPENROUTER_API_KEY=your_api_key_here
OPENROUTER_LLM_MODEL=anthropic/claude-haiku-4.5
OPENROUTER_EMBEDDING_MODEL=openai/text-embedding-3-small

# SUPADATA API (YouTube transcription)
SUPADATA_API_KEY=your_api_key_here
SUPADATA_BASE_URL=https://api.supadata.ai

# RAG Configuration
RAG_TOP_K=12
RAG_CONTEXT_MESSAGES=10
CHUNK_SIZE=700
CHUNK_OVERLAP_PERCENT=20

# Authentication & Security
SESSION_EXPIRES_DAYS=7
SECRET_KEY=your_secret_key_here_change_in_production

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:4321,http://localhost:3000

# LangSmith (optional, for observability)
LANGSMITH_API_KEY=  # Optional
LANGSMITH_PROJECT=youtube-talker

# Application
ENV=development
DEBUG=true
